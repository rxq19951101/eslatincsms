version: "3.9"

services:
  db:
    image: postgres:15-alpine
    container_name: ocpp-db
    ports:
      - "5432:5432"
    environment:
      - POSTGRES_USER=local
      - POSTGRES_PASSWORD=local
      - POSTGRES_DB=ocpp
    networks:
      - ocppnet
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U local -d ocpp"]
      interval: 5s
      timeout: 3s
      retries: 3

  redis:
    image: redis:7-alpine
    container_name: ocpp-redis
    ports:
      - "6379:6379"
    command: redis-server --appendonly no --save "" --stop-writes-on-bgsave-error no
    networks:
      - ocppnet
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 5s
      timeout: 5s
      retries: 3

  mqtt-broker:
    image: eclipse-mosquitto:latest
    container_name: mqtt-broker
    ports:
      - "1883:1883"
    volumes:
      - ./mosquitto.conf:/mosquitto/config/mosquitto.conf:ro
    networks:
      - ocppnet
    healthcheck:
      test: ["CMD-SHELL", "mosquitto_pub -h localhost -t test -m test || exit 1"]
      interval: 10s
      timeout: 5s
      retries: 3
      start_period: 5s

  csms:
    build: ./csms
    container_name: ocpp-csms
    ports:
      - "9000:9000"
    environment:
      - REDIS_URL=redis://redis:6379/0
      - PORT=9000
      - MQTT_BROKER_HOST=mqtt-broker
      - MQTT_BROKER_PORT=1883
      # 可选：启用 WebSocket 传输（默认关闭，取消注释以启用）
      # - ENABLE_WEBSOCKET_TRANSPORT=true
      # 可选：启用 HTTP 传输（默认关闭，取消注释以启用）
      # - ENABLE_HTTP_TRANSPORT=true
    depends_on:
      redis:
        condition: service_healthy
      db:
        condition: service_healthy
      mqtt-broker:
        condition: service_healthy
    networks:
      - ocppnet
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:9000/health"]
      interval: 10s
      timeout: 5s
      retries: 3

networks:
  ocppnet:
    driver: bridge
