# 生产环境环境变量示例
# 复制此文件为 .env 并填写实际值

# ==================== 安全配置 ====================
# 加密密钥（32字节base64编码，用于加密master_secret）
# 生成命令: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-32-byte-base64-encryption-key-here

# 加密Salt（16字节，用于PBKDF2）
# 生成命令: python -c "import secrets; print(secrets.token_urlsafe(16))"
ENCRYPTION_SALT=your-16-byte-salt-here

# JWT密钥（用于API认证）
# 生成命令: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-jwt-secret-key-here

# ==================== 数据库配置 ====================
DATABASE_URL=postgresql://user:password@host:port/database

# 数据库连接池配置
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600
DB_ECHO=false

# ==================== Redis配置 ====================
REDIS_URL=redis://host:port/db
REDIS_PASSWORD=

# ==================== MQTT配置 ====================
MQTT_BROKER_HOST=mqtt-broker-host
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC_PREFIX=ocpp

# ==================== 应用配置 ====================
ENVIRONMENT=production
DEBUG=false
HOST=0.0.0.0
PORT=9000

# ==================== CORS配置 ====================
# 多个域名用逗号分隔
CORS_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com
CORS_ALLOW_CREDENTIALS=true

# ==================== 传输配置 ====================
ENABLE_MQTT_TRANSPORT=true
ENABLE_HTTP_TRANSPORT=false
ENABLE_WEBSOCKET_TRANSPORT=false

# ==================== 日志配置 ====================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/csms/app.log

# ==================== API文档 ====================
# 生产环境建议设置为 None 禁用
DOCS_URL=None
REDOC_URL=None

# ==================== 监控配置 ====================
ENABLE_METRICS=true
METRICS_PATH=/metrics

# ==================== 速率限制 ====================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
